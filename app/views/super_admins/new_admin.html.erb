<%= form_with(url: "/superadmin/admin/new/process", method: "post") do %>

  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Tambah Admin</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-6 gap-6">

            <div class="col-span-6">
              <label for="fullname" class="block text-sm font-medium text-gray-700">Nama Lengkap</label>
              <input type="text" name="fullname" id="street_address" placeholder="Nama Lengkap" autocomplete="street-address" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
            </div>

            <div class="col-span-6">
              <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
              <input type="text" name="username" id="street_address" placeholder="username" autocomplete="street-address" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
            </div>

            <div class="col-span-6">
              <label for="username" class="block text-sm font-medium text-gray-700">Jenis Admin</label>
              <% @roles.each do |role| %>
                <div class="flex items-center">
                <input type="radio" value="<%= role.id %>" id="role<%= role.id %>" name="role_id" class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300">
                <label for="role<%= role.id %>" class="ml-3 block text-sm font-medium text-gray-700">
                    <%= role.name %>
                </label>
                </div>
              <% end %>
            </div>

            <div class="col-span-6">
              <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
              <input type="email" name="email" id="street_address" placeholder="email" autocomplete="street-address" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
            </div>

            <div class="col-span-6" data-controller="btnPassword">
              <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
              <div class="mt-1 flex rounded-md shadow-sm">
                <input data-target="btnPassword.hideable" type="password" name="password" id="email" class="focus:ring-blue-500 focus:border-blue-500 block w-full rounded-none rounded-l-md sm:text-sm border-gray-300" placeholder="Your secret password">
                <div data-action="click->btnPassword#hide" class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500">
                  <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="col-span-6">
              <label for="phone_number" class="block text-sm font-medium text-gray-700">No.Telp/HP</label>
              <input type="number" name="phone_number" id="street_address" placeholder="Nomor telepon" autocomplete="street-address" class="mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" required>
            </div>
          </div>
      </div>
    </div>
  </div>


  <div class="py-5 flex justify-end">
    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
      Tambah
    </button>
  </div>
<% end %>