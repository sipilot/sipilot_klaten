<%- if controller_name != 'sessions' %>
  <div class="py-2 text-xm">
    Sudah punya akun ? <%= link_to "Sign In", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="py-2 text-xm">
    Belum memiliki akun ? <%= link_to "Sign Up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="py-2 text-xm">
    Lupa kata sandi ? <%= link_to "Forgot Password!", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="py-2 text-xm">
    Tidak menerima konfirmasi email ? <%= link_to "Help!", new_confirmation_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="py-2 text-xm">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="py-2 text-xm">
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "font-medium text-blue-600 hover:text-blue-500" %><br />
    </div>
  <% end %>
<% end %>
