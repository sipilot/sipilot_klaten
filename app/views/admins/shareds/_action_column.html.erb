<% if status == 'revisi' %>
    <span>
    <%= link_to admin_detail_submission_path(submission), class: "px-2 inline-flex text-xs leading-5 font-semibold bg-blue-500 text-white" do %>
        Detail
    <% end %>
    </span>
<% elsif status == 'selesai' %>
    <span>
    <%= link_to admin_taken_submission_path(submission), class: "px-2 inline-flex text-xs leading-5 font-semibold bg-yellow-500 text-white" do %>
        Ambil
    <% end %>
    </span><br/>
<% else %>
    <span>
    <%= link_to admin_accept_submission_path(submission), class: "px-2 inline-flex text-xs leading-5 font-semibold bg-green-500 text-white" do %>
        Setujui
    <% end %>
    </span><br/>
    <span>
    <%= link_to admin_detail_submission_path(submission), class: "px-2 inline-flex text-xs leading-5 font-semibold bg-blue-500 text-white" do %>
        Detail
    <% end %>
    </span><br/>
    <span>
    <%= link_to admin_member_revision_path(submission), class: "px-2 inline-flex text-xs leading-5 font-semibold bg-yellow-500 text-white" do %>
        Revisi
    <% end %>
    </span><br/>
    <span><a href="#" class="px-2 inline-flex text-xs leading-5 font-semibold bg-red-500 text-white">Hapus</a></span>
<% end %>